<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Buscar Relatório por CPF</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .table-responsive {
            overflow-x: auto;
        }
        table {
            table-layout: fixed;
            width: 100%;
        }
        th, td {
            word-wrap: break-word;
            word-break: break-word;
            white-space: normal;
            vertical-align: middle;
        }
        .loading {
            display: none;
            text-align: center;
            margin: 20px 0;
        }
        .error-message {
            color: #dc3545;
            margin-top: 10px;
            display: none;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Buscar Relatório por CPF</h1>
        
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Digite o CPF do paciente</h5>
            </div>
            <div class="card-body">
                <form id="formBuscarCpf">
                    <div class="input-group mb-3">
                        <input type="text" id="cpfInput" class="form-control" placeholder="Digite o CPF do paciente" required>
                        <button class="btn btn-primary" type="submit">Buscar</button>
                    </div>
                </form>
                <div id="errorMessage" class="error-message"></div>
            </div>
        </div>

        <div id="loading" class="loading">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Carregando...</span>
            </div>
            <p>Buscando dados...</p>
        </div>

        <!-- Dados do Paciente -->
        <div id="dadosPaciente" class="mt-4" style="display: none;">
            <h3 class="text-center">Dados do Paciente</h3>
            <div class="table-responsive">
                <table class="table table-bordered table-hover text-center align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Nome</th>
                            <th>CPF</th>
                            <th>Telefone</th>
                            <th>Endereço</th>
                            <th>Data Nasc.</th>
                            <th>Observações</th>
                        </tr>
                    </thead>
                    <tbody id="pacienteTableBody">
                        <!-- Dados do paciente serão inseridos aqui via JavaScript -->
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Agendamentos do Paciente -->
        <div id="agendamentosPaciente" class="mt-4" style="display: none;">
            <h3 class="text-center">Agendamentos do Paciente</h3>
            <div class="table-responsive">
                <table class="table table-bordered table-hover text-center align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Data da Consulta</th>
                            <th>Tipo de Exame</th>
                            <th>ID Paciente</th>
                            <th>Nome Paciente</th>
                            <th>CPF Paciente</th>
                        </tr>
                    </thead>
                    <tbody id="agendamentosTableBody">
                        <!-- Dados dos agendamentos serão inseridos aqui via JavaScript -->
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Relatórios do Paciente -->
        <div id="relatoriosPaciente" class="mt-4" style="display: none;">
            <h3 class="text-center">Relatórios do Paciente</h3>
            <div class="table-responsive">
                <table class="table table-bordered table-hover text-center align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Nome do Paciente</th>
                            <th>CPF</th>
                            <th>Tipo de Exame</th>
                            <th>Data do Exame</th>
                            <th>Resultado</th>
                            <th>Observação</th>
                        </tr>
                    </thead>
                    <tbody id="relatoriosTableBody">
                        <!-- Dados dos relatórios serão inseridos aqui via JavaScript -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const formBuscarCpf = document.getElementById('formBuscarCpf');
            const cpfInput = document.getElementById('cpfInput');
            const loading = document.getElementById('loading');
            const errorMessage = document.getElementById('errorMessage');
            const dadosPaciente = document.getElementById('dadosPaciente');
            const agendamentosPaciente = document.getElementById('agendamentosPaciente');
            const relatoriosPaciente = document.getElementById('relatoriosPaciente');
            const pacienteTableBody = document.getElementById('pacienteTableBody');
            const agendamentosTableBody = document.getElementById('agendamentosTableBody');
            const relatoriosTableBody = document.getElementById('relatoriosTableBody');

            // Função para formatar CPF
            function formatarCPF(cpf) {
                cpf = cpf.replace(/\D/g, '');
                if (cpf.length === 11) {
                    return cpf.replace(/(\d{3})(\d{3})(\d{3})(\d{2})/, "$1.$2.$3-$4");
                }
                return cpf;
            }

            // Função para formatar data
            function formatarData(dataString) {
                if (!dataString) return '-';
                const data = new Date(dataString);
                return data.toLocaleDateString('pt-BR');
            }

            // Função para buscar dados por CPF
            function buscarDadosPorCpf(cpf) {
                // Limpa o CPF (remove pontos, traços, etc.)
                const cpfLimpo = cpf.replace(/\D/g, '');
                
                // Esconde as tabelas e mensagens de erro
                dadosPaciente.style.display = 'none';
                agendamentosPaciente.style.display = 'none';
                relatoriosPaciente.style.display = 'none';
                errorMessage.style.display = 'none';
                
                // Mostra o indicador de carregamento
                loading.style.display = 'block';
                
                // Faz a requisição para a API
                fetch(`/api/relatorios/consolidado/${cpfLimpo}`)
                    .then(response => {
                        if (!response.ok) {
                            throw new Error(`Erro ao buscar dados: ${response.status}`);
                        }
                        return response.json();
                    })
                    .then(data => {
                        // Esconde o indicador de carregamento
                        loading.style.display = 'none';
                        
                        if (data.success) {
                            // Preenche a tabela de paciente
                            const paciente = data.data.paciente;
                            pacienteTableBody.innerHTML = `
                                <tr>
                                    <td>${paciente.id}</td>
                                    <td>${paciente.nome}</td>
                                    <td>${formatarCPF(paciente.CPF)}</td>
                                    <td>${paciente.telefone || '-'}</td>
                                    <td>${paciente.endereco || '-'}</td>
                                    <td>${formatarData(paciente.data_nascimento)}</td>
                                    <td>${paciente.observacoes || '-'}</td>
                                </tr>
                            `;
                            dadosPaciente.style.display = 'block';
                            
                            // Preenche a tabela de agendamentos
                            const agendamentos = data.data.agendamentos;
                            if (agendamentos && agendamentos.length > 0) {
                                agendamentosTableBody.innerHTML = agendamentos.map(agendamento => `
                                    <tr>
                                        <td>${agendamento.id}</td>
                                        <td>${formatarData(agendamento.data_consulta)}</td>
                                        <td>${agendamento.tipo_exame}</td>
                                        <td>${agendamento.paciente_id}</td>
                                        <td>${agendamento.paciente_nome}</td>
                                        <td>${formatarCPF(agendamento.paciente_cpf)}</td>
                                    </tr>
                                `).join('');
                                agendamentosPaciente.style.display = 'block';
                            } else {
                                agendamentosTableBody.innerHTML = '<tr><td colspan="6">Nenhum agendamento encontrado para este paciente.</td></tr>';
                                agendamentosPaciente.style.display = 'block';
                            }
                            
                            // Preenche a tabela de relatórios
                            const relatorios = data.data.relatorios;
                            if (relatorios && relatorios.length > 0) {
                                relatoriosTableBody.innerHTML = relatorios.map(relatorio => `
                                    <tr>
                                        <td>${relatorio.id}</td>
                                        <td>${relatorio.nome_paciente}</td>
                                        <td>${formatarCPF(relatorio.cpf)}</td>
                                        <td>${relatorio.tipo_exame}</td>
                                        <td>${formatarData(relatorio.data_exame)}</td>
                                        <td>${relatorio.resultado}</td>
                                        <td>${relatorio.observacao || '-'}</td>
                                    </tr>
                                `).join('');
                                relatoriosPaciente.style.display = 'block';
                            } else {
                                relatoriosTableBody.innerHTML = '<tr><td colspan="7">Nenhum relatório encontrado para este paciente.</td></tr>';
                                relatoriosPaciente.style.display = 'block';
                            }
                        } else {
                            // Exibe mensagem de erro
                            errorMessage.textContent = data.message || 'Erro ao buscar dados.';
                            errorMessage.style.display = 'block';
                        }
                    })
                    .catch(error => {
                        // Esconde o indicador de carregamento e exibe mensagem de erro
                        loading.style.display = 'none';
                        errorMessage.textContent = `Erro ao buscar dados: ${error.message}`;
                        errorMessage.style.display = 'block';
                        console.error('Erro:', error);
                    });
            }

            // Evento de submit do formulário
            formBuscarCpf.addEventListener('submit', function(e) {
                e.preventDefault();
                const cpf = cpfInput.value.trim();
                
                if (cpf) {
                    buscarDadosPorCpf(cpf);
                } else {
                    errorMessage.textContent = 'Por favor, digite um CPF.';
                    errorMessage.style.display = 'block';
                }
            });
        });
    </script>
</body>
</html>

